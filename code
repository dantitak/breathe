<body>

<!-- MENU SCREEN -->
<div id="menu" class="screen visible">
    <div id="title">Breathe</div>

    <div style="margin-top:40px;">
        Goal:
        <select id="goalSelect">
            <option>5</option>
            <option>10</option>
            <option>15</option>
            <option>20</option>
            <option>Infinite</option>
        </select>
    </div>

    <button onclick="startApp()">Start</button>
    <button onclick="openSettings()">Settings</button>
</div>

<!-- SETTINGS MODAL -->
<div id="settingsModal">
    <h2>Adjust Times (seconds)</h2>
    Inhale: <input type="number" id="inhaleInput" min="1" value="4"><br>
    Hold: <input type="number" id="holdInput" min="1" value="7"><br>
    Exhale: <input type="number" id="exhaleInput" min="1" value="8"><br>
    <button onclick="saveSettings()">Save</button>
</div>

<!-- APP SCREEN -->
<div id="app" class="screen hidden">
    <button id="mainMenuBtn" onclick="goToMenu()">Main Menu</button>

    <div id="counter">Cycles: 0</div>
    <div id="goal"></div>
    <div id="phase"></div>

    <div id="circle">
        <div id="countdown"></div>
    </div>

    <button onclick="startBreathing()">Start</button>
    <button onclick="reset()">Reset</button>
</div>

<script>
let inhale = 4;
let hold = 7;
let exhale = 8;

let running = false;
let cycleCount = 0;
let targetCycles = null;

const menu = document.getElementById("menu");
const app = document.getElementById("app");
const circle = document.getElementById("circle");
const phaseText = document.getElementById("phase");
const counter = document.getElementById("counter");
const goalDisplay = document.getElementById("goal");
const countdown = document.getElementById("countdown");

const settingsModal = document.getElementById("settingsModal");
const inhaleInput = document.getElementById("inhaleInput");
const holdInput = document.getElementById("holdInput");
const exhaleInput = document.getElementById("exhaleInput");

function fadeTo(show, hide) {
    hide.classList.remove("visible");
    hide.classList.add("hidden");
    setTimeout(() => {
        show.classList.remove("hidden");
        show.classList.add("visible");
    }, 300);
}

function startApp() {
    const selected = document.getElementById("goalSelect").value;
    targetCycles = selected === "Infinite" ? null : parseInt(selected);

    if (targetCycles !== null) goalDisplay.innerText = "Goal: " + targetCycles;
    else goalDisplay.innerText = "";

    fadeTo(app, menu);
}

function goToMenu() {
    reset();
    fadeTo(menu, app);
}

function openSettings() {
    settingsModal.style.display = "flex";
}

function saveSettings() {
    inhale = parseInt(inhaleInput.value) || 4;
    hold = parseInt(holdInput.value) || 7;
    exhale = parseInt(exhaleInput.value) || 8;
    settingsModal.style.display = "none";
}

function startBreathing() {
    if (running) return;
    running = true;
    breatheCycle();
}

function reset() {
    running = false;
    cycleCount = 0;
    counter.innerText = "Cycles: 0";
    circle.style.transform = "scale(0)";
    countdown.innerText = "";
    phaseText.innerText = "";
    goalDisplay.innerText = targetCycles !== null ? "Goal: " + targetCycles : "";
}

async function breatheCycle() {
    while (running) {
        // Inhale
        circle.style.transition = "none";
        circle.style.transform = "scale(0)";
        await sleep(50);

        await phase("Inhale", inhale, 1);
        await phase("Hold", hold, 1);
        await phase("Exhale", exhale, 0);

        cycleCount++;
        counter.innerText = "Cycles: " + cycleCount;

        if (targetCycles !== null) {
            let remaining = targetCycles - cycleCount;
            goalDisplay.innerText = "Goal: " + remaining;
            if (remaining <= 0) {
                phaseText.innerText = "Session Complete âœ¨";
                countdown.innerText = "";
                running = false;
                break;
            }
        }
    }
}

async function phase(name, duration, scaleTarget) {
    phaseText.innerText = name;

    // pulsing glow effect
    if (scaleTarget === 1) circle.classList.add("glow");
    else circle.classList.remove("glow");

    circle.style.transition = duration + "s ease-in-out";
    circle.style.transform = "scale(" + scaleTarget + ")";

    for (let i = duration; i > 0; i--) {
        countdown.innerText = i;
        await sleep(1000);
        if (!running) return;
    }
    countdown.innerText = "";
}

function sleep(ms) { return new Promise(resolve => setTimeout(resolve, ms)); }
</script>

</body>
</html>
